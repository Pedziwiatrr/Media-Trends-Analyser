CYAN='\033[0;36m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

echo "\n${CYAN}Running pre-push checks...${NC}\n"

cd ./client

npm run validate
exitCode=$?

cd ..

if [ $exitCode -ne 0 ]; then
  echo "\n${RED}Pre-push checks failed.${NC} Push aborted.\n"
  exit $exitCode
fi


echo "\n${GREEN}Pre-push checks passed.${NC}\n"
exit 0
